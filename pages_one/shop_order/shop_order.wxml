<view class="container">

	<view class="w710 b-ff flex col fl-align" style="margin: 25rpx auto;">

		<view class="f34 c-33 f-wb">门店预约</view>

		<view class="flex fl-align fl-jsb">
			<image src="../../icon/shop.png" class="icon"></image>
			<picker style="width:92%;padding:20rpx 0;border-bottom:1rpx solid #f5f5f5;" mode="selector" range="{{shop_list}}" range-key="shopname">
				<view class="wh flex fl-align fl-jsb">
					<text class="c-99 F30">{{shop}}</text>
					<image src="../../icon/to.png" class="icon"></image>
				</view>
			</picker>
		</view>

		<view class="flex fl-jsb">
			<image src="../../icon/time.png" class="icon"></image>
			<view class="flex col" style="width:92%;">
				<view class="w100 flex fl-align fl-jsb" style="border-bottom:1rpx solid #f5f5f5;padding-bottom:20rpx;">
					<picker mode="date" style="width:95%;">
						<view class="c-F0 F30">{{time_one}}</view>
					</picker>
					<image src="../../icon/to.png" class="icon"></image>
				</view>
				<view class="w100 flex fl-align fl-jsb" style="border-bottom:1rpx solid #f5f5f5;padding:20rpx 0;">
					<picker mode="time" style="width:95%;">
						<view class="c-F0 F30">{{time_two}}</view>
					</picker>
					<image src="../../icon/to.png" class="icon"></image>
				</view>
			</view>
		</view>

		<view class="flex fl-align fl-jsb">
			<image src="../../icon/work.png" class="icon"></image>
			<picker style="width:92%;padding:20rpx 0;border-bottom:1rpx solid #f5f5f5;" mode="selector" range="{{business_list}}" range-key="name">
				<view class="wh flex fl-align fl-jsb">
					<text class="c-99 F30">预约业务</text>
					<image src="../../icon/to.png" class="icon"></image>
				</view>
			</picker>
		</view>

		<view class="flex fl-align fl-jsb">
			<image src="../../icon/name.png" class="icon"></image>
			<input style="width:92%;padding:20rpx 0;border-bottom:1rpx solid #f5f5f5;" placeholder="请输入您的姓名" bindblur="getName"></input>
		</view>

		<view class="flex fl-align fl-jsb">
			<image src="../../icon/mobile.png" class="icon"></image>
			<input type="number" style="width:92%;padding:20rpx 0;border-bottom:1rpx solid #f5f5f5;" placeholder="请输入您的手机号码" bindblur="getPhone"></input>
		</view>

	</view>

	<view class="send b-8F c-ff t-c f30 f-wb b_r40" bindtap="toSend">确认提交</view>

</view>