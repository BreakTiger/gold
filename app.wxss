page {
  height: 100%;
}

.container {
  width: 750rpx;
  height: auto;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  overflow: auto;
}

/* 弹性 */
.flex {
  display: flex;
}

.col {
  flex-direction: column;
}

.fl-w {
  flex-wrap: wrap;
}

.fl-align {
  align-items: center;
}

.fl-jc {
  justify-content: center;
}

.fl-jsb {
  justify-content: space-between;
}

.fl-jsa {
  justify-content: space-around;
}

.fl-jse {
  justify-content: space-evenly;
}

.fl-jsd {
  justify-content: flex-end;
}

/* 文字大小 */
.f24 {
  font-size: 24rpx;
}

.f26 {
  font-size: 26rpx;
}

.f28 {
  font-size: 28rpx;
}

.f30 {
  font-size: 30rpx;
}

.f32 {
  font-size: 32rpx;
}

.f36 {
  font-size: 36rpx;
}

.f62 {
  font-size: 62rpx;
}

/* 文字颜色 */
.c-ff {
  color: #ffffff;
}

.c-33 {
  color: #333333;
}

.c-34 {
  color: #343434;
}

.c-66 {
  color: #666666;
}

.c-42 {
  color: #C09042;
}

.c-90 {
  color: #E2C290;
}

.c-9A {
  color: #9A9A9A;
}

.c-8F {
  color: #E2C28F;
}

.c-99 {
  color: #999999;
}

.c-F0 {
  color: #0FB2F0;
}

/* 文字粗细 */
.f-wb {
  font-weight: bold;
}

/* 背景颜色 */
.b-ff {
  background: #ffffff;
}

.b-90 {
  background: #E2C290;
}

.b-f5 {
  background: #f5f5f5;
}

.b-B2 {
  background: #B2B2B2;
}

.b-8F {
  background: #E2C28F;
}

/* 超出省略 */
.climp1 {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.climp2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.climp3 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 圆角 */
.b_rh {
  border-radius: 50%;
}

.b_r10 {
  border-radius: 10rpx;
}

.b_r30 {
  border-radius: 30rpx;
}

.b_r40 {
  border-radius: 40rpx;
}

/* 容器 */
.w710 {
  width: 710rpx;
}

.w100 {
  width: 100%;
}

.h100 {
  height: 100%;
}

.wh {
  width: 100%;
  height: 100%;
}

/* 对其 */
.t-c {
  text-align: center;
}

/* 定位 */
.p-r {
  position: relative;
}

.p-a {
  position: absolute;
}

.p-f {
  position: fixed;
}

/* 遮罩 */
.cover {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  z-index: 100;
}